{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@screens": ["src/screens"],
      "@components": ["src/components"],
      "@utils": ["src/utils"],
      "@contexts": ["src/contexts"],
      "@config/*": ["src/config/*"],
      "@routes": ["src/routes"],
      "@services": ["src/services"],
      "@assets/*": ["/assets/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "App.tsx"
  ],
  "exclude": ["node_modules"]
}
